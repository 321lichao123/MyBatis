<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//com.atguigu.mybatis.org//DTD Mapper 3.0//EN"
        "http://com.atguigu.mybatis.org/dtd/com.atguigu.mybatis-3-mapper.dtd">
<!--
    namespace: 名称空间，指定接口的全类名，将接口与select绑定了
    id：唯一标识，
    resultType：返回值类型
    #{id}：从传递过来的参数中取出id值
-->
<mapper namespace="com.atguigu.dao.EmployeeMapper">
    <select id="getEmpById" resultType="com.atguigu.bean.Employee">
        select id, last_name lastName, gender, email from tbl_employee where id = #{id}
    </select>
</mapper>